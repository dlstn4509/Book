<%- include('../inc/head.ejs', {css}) %> 
<%- include('../inc/header.ejs') %>

<div class="list-wrapper wrapper">
  <%- include('../inc/title-book.ejs', {title, description}) %>
  <table class="book-tbl table table-hover table-striped text-center">
    <thead class="thead-dark">
      <tr>
        <th>번호</th>
        <th>도서명</th>
        <th>저자</th>
        <th>요약설명</th>
        <th>등록일</th>
        <th>상태</th>
      </tr>
    </thead>
    <tbody>
    <% for(let book of books) { %> 
      <tr data-idx="<%= book.idx %>">
        <td><%= book.idx %> </td>
        <td class="text-left"><%= book.title %></td>
        <td><%= book.writer %></td>
        <td class="text-left"><%= book.content %></td>
        <td><%= book.createdAt %></td>
        <td><%= book.status %></td>
      </tr>
    <% } %> 
    </tbody>
  </table>
  <%- include('../inc/pager.ejs', {...pager}) %>
</div>


<%- include('../inc/foot.ejs', {js}) %> 